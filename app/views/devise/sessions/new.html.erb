<% provide(:title, "ログイン") %>
<main class="bg-white py-12 mt-16 flex justify-center">
  <div class="w-2/3 shadow-xl rounded-lg">
    <h1 class="font-bold text-3xl text-center mb-8">ログイン</h1>

    <div class="flex justify-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス, class: "block text-xl text-gray-700 font-semibold" %><br />
          <%= f.email_field :email, class: "w-80 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード, class: "mt-6 block text-xl text-gray-700 font-semibold" %><br />
          <%= f.password_field :password, class: "w-80 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-2">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン状態を保持する %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "w-full bg-sky-500 text-white font-bold my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
        </div>
      <% end %>
    
    </div>
    <%= render "devise/shared/links" %>
  </div>
</main>
