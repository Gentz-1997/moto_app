<% provide(:title, "ログイン") %>
<div class="py-12 flex flex-col justify-between items-center w-full max-w-md mx-auto">
  <h1 class="font-bold text-2xl text-gray-700 text-center mb-4 flex items-center">
    <%= user_icon(class: "size-6 mr-2") %>
    ログイン
  </h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "space-y-6 mt-4"}) do |f| %>
    <div>
      <%= f.label :メールアドレス, class: "block text-md text-gray-700 font-semibold mb-3" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="text-gray-700 font-semibold">
      <%= f.label :パスワード, class: "block text-md" %>
      <em>(6文字以上)</em>
      <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "current-password" %>
      <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン状態を保持する %>
      </div>
    <% end %>
    </div>
    
    <div class="actions">
      <%= f.submit "ログイン", class: "w-full bg-blue-sky text-white font-bold mt-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
