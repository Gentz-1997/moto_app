<% provide(:title, "編集") %>
<div class="py-12 flex flex-col justify-between items-center w-full max-w-md mx-auto">
  <h1 class="font-bold text-2xl text-gray-700 mb-4">ユーザー編集</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div>
      <%= f.label :ユーザー画像を選択, class: "block text-md text-gray-700 font-semibold mb-3" %>
      <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: "file-input file-input-bordered w-full max-w-xs" %>
    </div>
    <div>
      <%= f.label :名前, class: "block text-md text-gray-700 font-semibold mb-3" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
    </div>
    <div>
      <%= f.label :メールアドレス, class: "block text-md text-gray-700 font-semibold mb-3" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autofocus: true, autocomplete: "email" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="text-gray-700 ">
      <%= f.label :新しいパスワード, class: "block text-md font-semibold mb-3" %> 
      <%= f.password_field :password, class: "w-full px-3 py-2 mb-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "new-password" %>
      <p class="text-sm">
        変更がなければ空白<br>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上で設定してください</em>
        <% end %>
      </p>
    </div>
    <div>
      <%= f.label :新しいパスワード確認, class: "block text-md text-gray-700 font-semibold mb-3" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.submit "更新", class: "w-full bg-sky-500 text-white font-bold my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
    </div>
  <% end %>
  <div class="flex justify-center space-x-4">
    <%= link_to "戻る", :back, class: "font-bold text-md text-blue-500 hover:text-gray-700 hover:underline mb-2" %>
    <a class="font-bold text-md text-gray-700">/</a>
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "font-bold text-md text-blue-500 hover:text-gray-700 hover:underline mb-2" %>
  </div>
</div>