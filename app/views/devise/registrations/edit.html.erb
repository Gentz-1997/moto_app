<% provide(:title, "編集") %>
<main class="bg-white py-12 mt-16 flex justify-center">
  <div class="w-2/3 shadow-xl rounded-lg">
    <h1 class="font-bold text-2xl text-gray-700 text-center mb-8">ユーザー編集</h1>

    <div class="flex justify-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-6">
          <%= f.label :ユーザー画像を選択, class: "block text-md text-gray-700 font-semibold" %>
          <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png", class: "file-input file-input-bordered w-full max-w-xs mt-6" %>
        </div>

        <div class="field mb-6">
          <%= f.label :名前, class: "block text-md text-gray-700 font-semibold" %><br>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス, class: "block text-md text-gray-700 font-semibold" %><br />
          <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field my-6 text-gray-700 ">
          <%= f.label :新しいパスワード, class: "block text-md font-semibold" %> <p class="text-sm">(変更がなければ空白)</p><br />
          <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em class="font-bold"><%= @minimum_password_length %> 文字以上</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :新しいパスワード確認, class: "block text-md text-gray-700 font-semibold" %><br />
          <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class: "w-full bg-sky-500 text-white font-bold my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
        </div>
      <% end %>
    </div>

    <div class="flex justify-center space-x-4">
      <%= link_to "戻る", :back, class: "font-bold text-md text-blue-500 hover:text-gray-700 hover:underline mb-2" %>
      <a class="font-bold text-md text-gray-700">/</a>
      <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "font-bold text-md text-blue-500 hover:text-gray-700 hover:underline mb-2" %>
    </div>
  </div>
</main>