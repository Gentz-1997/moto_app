<% provide(:title, "新規登録") %>
  <div class="py-12 flex flex-col justify-between items-center w-full">
    <h1 class="font-bold text-2xl text-gray-700 text-center mb-4">新規登録</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "space-y-4"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :名前, class: "block text-md text-gray-700 font-semibold mb-3" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
        </div>
        
        <div>
          <%= f.label :メールアドレス, class: "block text-md text-gray-700 font-semibold mb-3" %>
          <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="text-gray-700 font-semibold">
          <%= f.label :パスワード, class: "block text-md" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "new-password" %>
        </div>

        <div>
          <%= f.label :パスワード確認, class: "block text-md text-gray-700 font-semibold mb-3" %>
          <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class: "w-full bg-blue-sky text-white font-bold mt-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
        </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>

