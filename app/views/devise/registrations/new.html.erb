<% provide(:title, "新規登録") %>
<main class="bg-white py-12 mt-16 flex justify-center">
  <div class="w-2/3 shadow-xl rounded-lg">
    <h1 class="font-bold text-3xl text-center mb-8">新規登録</h1>

    <div class="flex justify-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-6">
          <%= f.label :名前, class: "block text-xl text-gray-700 font-semibold" %><br>
          <%= f.text_field :name, class: "w-80 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
        </div>
        
        <div class="field">
          <%= f.label :メールアドレス, class: "block text-xl text-gray-700 font-semibold" %><br />
          <%= f.email_field :email, class: "w-80 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field my-6 text-gray-700 font-semibold">
          <%= f.label :パスワード, class: "block text-xl" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, class: "w-80 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認, class: "block text-xl text-gray-700 font-semibold" %><br />
          <%= f.password_field :password_confirmation, class: "w-80 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class: "w-full bg-sky-500 text-white font-bold my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
        </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<main>

