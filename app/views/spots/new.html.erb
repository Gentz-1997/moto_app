<div class="bg-white py-12 mt-16 fixed top-10 left-72 max-w-md shadow-md rounded-lg">
  <h1 class="font-bold text-3xl text-center mb-8">スポットを登録する</h1>
  <%= form_with model: @spot, class: "space-y-4" do |form| %>
    <%= form.label :name, class: "block text-xl text-gray-700 font-semibold mx-10" %>
    <%= form.text_field :spot_name, class: "w-80 px-3 py-2 mx-10 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>

    <%= form.label :address, class: "block text-xl text-gray-700 font-semibold mx-10" %>
    <%= form.text_field :address, class: "w-80 px-3 py-2 mx-10 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>

    <%= form.submit "登録", class: "w-full bg-sky-500 text-white font-bold mt-8 my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
  <% end %>
</div>