<%= form_with url: search_spots_path, method: :get, local: true, class: "flex flex-col md:flex-row items-center md:items-end my-8 mt-4" do %>
  <%= text_field_tag :q, params[:q], placeholder: "スポットを検索", class: "w-full md:w-80 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent mb-4 md:mb-0" %>
  <%= submit_tag "検索", class: "w-auto bg-sky-500 text-white py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
<% end %>