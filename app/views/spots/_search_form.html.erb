<%= form_with url: search_spots_path, method: :get, local: true do %>
  <%= text_field_tag :q, params[:q], placeholder: "スポットを検索", class: "w-80 px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
  <%= submit_tag "検索", class: "bg-sky-500 text-white font-bold mt-4 my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
<% end %>