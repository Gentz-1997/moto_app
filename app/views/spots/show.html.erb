<% provide(:title, "スポット詳細") %>
<div class="flex flex-col items-center py-12 w-full max-w-lg mx-auto">
  <div class="flex justify-between border-b-2 border-b-gray-200 mb-8 w-full">
    <h1 class="font-bold text-2xl text-gray-700">
      <%= @spot.spot_name %>
    </h1>
    <%= link_to "スポット編集", edit_spot_path(@spot), class: "bg-blue-sky text-white font-bold py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
    <% if @spot.user_id == current_user.id %>
      <%= button_to "スポット削除", spot_path(@spot), data: { confirm: "Are you sure?", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "font-bold text-md text-blue-500 hover:text-gray-700 hover:underline mb-2" %>
    <% end %>
    <%= render 'favorite_button' %>
  </div>
  <div class="mb-8 w-full border-b-2 border-b-gray-200">
    <p class="py-2">住所:<%= @spot.address %></p>
    <div id="map" style="height: 300px; width: 100%;"></div>
  </div>
  <div class="mb-8 w-full border-b-2 border-b-gray-200">
    <p>スポット詳細</p>
    <% @spot.tags.each do |tag| %>
      <%= tag.tag_name %>
    <% end %>
  </div>
  <div class="button">
    <%= link_to "投稿する", new_spot_post_path(@spot), class: "w-10 bg-blue-sky text-white font-bold my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
  </div>
  <script>
    function initMap(){
      // 地図の位置情報(緯度・経度)を取得
      const mapPosition = {lat: <%= @spot.latitude || 0 %> , lng: <%= @spot.longitude || 0 %> };
      const map = new google.maps.Map(document.querySelector('#map'), {
        zoom: 15,
        center: mapPosition
      });
      const transitLayer = new google.maps.TransitLayer();
      transitLayer.setMap(map);

      const contentString = '【住所】<%= @spot.address %>';
      const infowindow = new google.maps.InfoWindow({
        content: contentString
      });

      const marker = new google.maps.Marker({
        position: mapPosition,
        map: map,
        title: contentString
      });

      marker.addListener('click', function(){
        infowindow.open(map, marker);
      });
    }
  </script>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&libraries=marker&callback=initMap" async defer></script>
  <% @spot.posts.each do |post|%>
    <%= render 'shared/post', post: post, show_spot_info: false %>
  <% end %>
</div>