<%= form_with model: @spot, class: "space-y-4" do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  <div class="field">
    <%= form.label :スポット名, class: "block text-md text-gray-700 font-semibold mb-3" %>
    <%= form.text_field :spot_name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
  </div>
  <div class="field">
    <%= form.label :住所, class: "block text-md text-gray-700 font-semibold mb-3" %>
    <%= form.text_field :address, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-transparent" %>
  </div>
  <div class="field">
    <%= form.label :タグ, class: "block text-md text-gray-700 font-semibold mb-2" %>
    <%= form.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |t| %>
      <div class="checkbox-item flex items-center">
        <%= t.check_box %>
        <%= t.label(class: "ml-2") %>
      </div>
    <% end %>
  </div>
  <div class="field">
    <%= form.submit "登録", class: "w-80 bg-blue-sky text-white font-bold mt-8 my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
  </div>
<% end %>
