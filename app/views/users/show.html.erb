<% provide(:title, "マイページ") %>
<main class="bg-white py-12 mt-16 flex justify-center">
  <div class="w-2/3 shadow-xl rounded-lg">
    <h1 class="font-bold text-3xl text-center mb-8">マイページ</h1>
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, size: "50x50" %>
    <% else %>
      <%= image_tag "default_image.jpeg", size: "50x50" %>
    <% end %>
    <%= current_user.name %>
    <div clss="button">
      <%= link_to "編集", edit_user_registration_path(current_user), class: "w-10 bg-sky-500 text-white font-bold my-8 py-2 px-4 rounded hover:bg-sky-600 transition duration-200" %>
    </div>
    <% @spots.each do |spot| %>
      <li><%= link_to spot.spot_name, spot_path(spot) %>-<%= spot.address %></li>
    <% end %>
  </div>
</main>