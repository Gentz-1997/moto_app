<% provide(:title, "ツーリング日記") %>
<div class="flex flex-col items-center bg-white py-12 mt-16 shadow-xl rounded-lg">
  <h1 class="font-bold text-3xl text-center mb-8">みんなのツーリング日記</h1>
  <% @posts.each do |post| %>
    <div class="flex items-center">
      <% if post.user.avatar.attached? %>
        <%= image_tag post.user.avatar, size: "50x50"%>
      <% else %>
        <%= image_tag "default_image.jpeg", size: "50x50"%>
      <% end %>
      <%= post.user.name %> 
    </div>
    <div>
      <%= post.content %>
    </div>
    <div>
      <% if post.images.attached? %>
        <% post.images.each do |image| %>
          <%= image_tag image, size: "100x100" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
