<header class="p-2 bg-blue-sky flex justify-between w-full">
  <div class="btn btn-ghost">
    <%= link_to "Moto map", "/", class: "text-xl" %>
  </div>

  <div class="drawer drawer-end">
    <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex justify-end">
      <label for="my-drawer-4" class="drawer-button btn btn-square btn-ghost">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-6 w-6 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>
    <div class="drawer-side">
      <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
      <ul class="menu bg-fields text-base-content min-h-full w-40 md:w-80 p-4 space-y-4 font-bold text-opacity-40">
        <% if user_signed_in? %>
          <div class="flex items-center">
            <%= comment_icon(class: "mt-3 size-6") %>
            <%= link_to "投稿一覧", posts_path, class: "mx-1 mt-4" %>
          </div>
          <div class="flex items-center">
            <%= search_icon %>
            <%= link_to "スポットを探す", spots_path, class: "mx-1" %>
          </div>
          <div class="flex items-center">
            <%= spot_icon %>
            <%= link_to "スポット登録", new_spot_path, class: "mx-1" %>
          </div>
          <div class="flex items-center">
            <%= user_icon %>
            <%= link_to "マイページ", user_path(current_user), class: "mx-1" %>
          </div>
          <div class="flex items-center">
            <%= logout_icon %>
            <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "mx-1" %>
          </div>
        <% else %>
          <div class="flex items-center">
            <%= registration_icon(class: "mt-3 size-6") %>
            <%= link_to "新規登録", new_user_registration_path, class: "mx-1 mt-4" %>
          </div>
          <div class="flex items-center">
            <%= user_icon %>
            <%= link_to "ログイン", new_user_session_path, class: "mx-1" %>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</header>